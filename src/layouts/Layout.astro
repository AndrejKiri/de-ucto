---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        line-height: 1.6;
      }
      a {
        color: #2c5282;
      }
      h1, h2, h3 {
        color: #1a365d;
      }
    </style>
  </head>
  <body>
    <slot />
    <footer style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #eee; font-size: 0.9em;">
      <p>© {new Date().getFullYear()} DE-účto, a.s. Všechna práva vyhrazena.</p>
    </footer>
  </body>
</html> 